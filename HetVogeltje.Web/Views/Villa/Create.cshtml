@model Villa
@{
    ViewData["Title"] = "Nieuw huisje";
}

<div class="w-100 card border-0 p-4">

    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Maak nieuw huistype</h2>
            </div>

        </div>
    </div>
    <div class="card-body border p-4">
        <!--informatie het is multipart/ form data om de image ook te pakken.
        -->
        <form method="post" class="row" enctype="multipart/form-data">

            <div class="p-3">
                <div asp-validation-summary="ModelOnly"></div> <!--kan ook all zijn of none -->
                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.Name" class="form-control border shadow" />
                    <label asp-for="@Model.Name"class="ms-2">Naam</label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>

                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.Description" class="form-control border shadow" />
                    <label asp-for="@Model.Description" class="ms-2"></label>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.Price" class="form-control border shadow" />
                    <label asp-for="@Model.Price" class="ms-2">Prijs</label>
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.Sqft" class="form-control border shadow" />
                    <label asp-for="@Model.Sqft" class="ms-2">Grootte</label>
                    <span asp-validation-for="@Model.Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.Occupancy" class="form-control border shadow" />
                    <label asp-for="@Model.Occupancy" class="ms-2">Hoeveel personen</label>
                    <span asp-validation-for="@Model.Occupancy" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">

                    <input asp-for="@Model.ImagePath" hidden class="form-control border shadow" />
                    <input asp-for="@Model.Image"  class="form-control border shadow" />
                    <label asp-for="@Model.ImagePath" class="ms-2">Locatie foto</label>
                    <span asp-validation-for="@Model.ImagePath" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Opslaan
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Annuleren
                        </a>
                     </div>
                </div>
         
            </div>


        </form>

    </div>
</div>

@section Scripts {

    @{

        <partial name="_ValidationScriptsPartial"/>
    }
    }
