@model IEnumerable<HetVogeltje.Domein.Entities.Villa>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="w-100 card border-0 p-4">

    <div class="card-header bg-success bg-gradient ml-0 py-3"
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Onze huisjes</h2>
            </div>

        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">

                <a asp-controller="Villa" asp-action="" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Voeg een nieuw huisje toe

                </a>
            </div>

        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>Omschrijving</th>
                    <th>Prijs per nacht</th>
                    <th>Grootte</th>
                    <th>Aantal personen</th>
                    <th>Acties</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var villa in Model)
                {
                    <tr>
                        <td>@villa.Name</td>
                        <td>@villa.Description</td>
                        <td>@villa.Price.ToString("C")</td>
                        <td>@villa.Sqft m2</td>
                        <td>@villa.Occupancy</td>
                        <td>
                            <a href="@Url.Action("Details", "Villa", new { id = villa.Id })" class="btn btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



